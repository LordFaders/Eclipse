package mirando.El.Pasado;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Scanner;

public class Ejercicio1 {

	public static void main(String[] args) {

		ArrayList<String> marcas = new ArrayList<>();
		marcas.add("Viceroy");
		marcas.add("Free Cola");
		marcas.add("Compaq");
		marcas.add("NetScape");
		marcas.add("Pan Am");
		marcas.add("Ares");
		marcas.add("Napster");
		marcas.add("Nokia");
		marcas.add("BlackBerry");
		marcas.add("Saab");

		System.out.println(marcas);
		System.out.println();

		Scanner sc = new Scanner(System.in);
		Scanner sc2 = new Scanner(System.in);
		int opcion = 0;
		do {
			System.out.println("Ingrese una nueva marca:");
			String nuevaMarca = sc.nextLine();
			marcas.add(nuevaMarca);
			System.out.println(marcas);
			System.out.println("¿Desea ingresar otra marca? 1=Si, 0=No");
			opcion = sc2.nextInt();
		} while (opcion == 1);

		System.out.println("¡¡Diablos!! Una de las marcas aún existe.");
		System.out.println("Ingrese la Marca a eliminar:");
		String marcaAEliminar = sc.nextLine();
		System.out.println("¿Está seguro? 1=Si, 0=No");
		for (String marcaOut : marcas) {
			do {
				marcaAEliminar.equalsIgnoreCase(marcaOut);
				marcas.remove(marcaAEliminar);
				System.out.println("La marca ha sido eliminada exitosamente.");
				System.out.println(marcas);
			} while (opcion == 1);
		}
	}
}
