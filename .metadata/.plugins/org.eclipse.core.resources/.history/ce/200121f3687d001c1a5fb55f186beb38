package com.desafiolatam;

import static org.junit.jupiter.api.Assertions.assertEquals;

import java.util.Scanner;
import java.util.logging.Logger;

import org.junit.Test;



public class ImcTest {

	private static Logger logger = Logger.getLogger("");

	@Test
	public void validarEdad(Scanner sc) {

		logger.info("IMC");
		Imc calculo = new Imc();
		Integer resultado = calculo.validarEdad();
		// clases assert
		assertEquals(20, resultado);
	}

	@Test
	public void obtenerEstaura() {

		logger.info("IMC");
		Imc calculo = new Imc();
		Float resultado = calculo.obtenerEstatura();
		assertEquals(resultado, resultado);

	}

	@Test
	public void obtenerKilos() {
		logger.info("IMC");
		Imc calculo = new Imc();
		Float resultado = calculo.obtenerKilos();
		assertEquals(resultado, resultado);
	}

	@Test
	public void calcularIMC() {
		logger.info("IMC");
		Imc calculo = new Imc();
		Float resultado = calculo.calcularIMC(1f, 1f);
		assertEquals(resultado, resultado);
	}

}
