package com.desafiolatam;

import java.util.Scanner;

public class Calculadora {

	public float sumar(float numero1, float numero2) {
		Scanner sc = new Scanner(System.in);
		numero1 = 0f;
		numero2 = 0f;
		float resultado = 0f;

		System.out.println("Ingrese el primer númmero");
		numero1 = sc.nextFloat();
		System.out.println("Ingrese el segundo númmero");
		numero2 = sc.nextFloat();
		resultado = numero1 + numero2;

		System.out.println("El resutado de la suma es: " + resultado);
		return resultado;

	}
	public float restar(float numero1, float numero2) {
		Scanner sc = new Scanner(System.in);
		numero1 = 0f;
		numero2 = 0f;
		float resultado = 0f;

		System.out.println("Ingrese el primer númmero");
		numero1 = sc.nextFloat();
		System.out.println("Ingrese el segundo númmero");
		numero2 = sc.nextFloat();
		resultado = numero1 - numero2;

		System.out.println("El resutado de la resta es: " + resultado);
		return resultado;

	}
	public void multiplicacion() {
		Scanner sc = new Scanner(System.in);
		float numero1 = 0f;
		float numero2 = 0f;
		float resultado = 0f;

		System.out.println("Ingrese el primer númmero");
		numero1 = sc.nextFloat();
		System.out.println("Ingrese el segundo númmero");
		numero2 = sc.nextFloat();
		resultado = numero1 * numero2;

		System.out.println("El resutado de la multiplicación es: " + resultado);
}
	public void division() {
		Scanner sc = new Scanner(System.in);
		float numero1 = 0f;
		float numero2 = 0f;
		float resultado = 0f;

		System.out.println("Ingrese el primer númmero");
		numero1 = sc.nextFloat();
		System.out.println("Ingrese el segundo númmero");
		numero2 = sc.nextFloat();
		resultado = numero1 / numero2;

		System.out.println("El resutado de la división es: " + resultado);
}
}